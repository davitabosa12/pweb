<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controle.usuario.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controle.usuario.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <servlet-class>controle.usuario.NovoUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerUsuarioServlet</servlet-name>
        <servlet-class>controle.usuario.VerUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoFuncionarioServlet</servlet-name>
        <servlet-class>controle.funcionario.NovoFuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerFuncionarioServlet</servlet-name>
        <servlet-class>controle.funcionario.VerFuncionarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <url-pattern>/NovoUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerUsuarioServlet</servlet-name>
        <url-pattern>/VerUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoFuncionarioServlet</servlet-name>
        <url-pattern>/NovoFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerFuncionarioServlet</servlet-name>
        <url-pattern>/VerFuncionarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
